/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "xil_cache.h"
#include <mb_interface.h>

#include "xparameters.h"
#include <xil_types.h>
#include <xil_assert.h>

#include <xio.h>
#include "xtmrctr.h"
#include "fft.h"
#include "note.h"
#include "stream_grabber.h"
#include "perfmon.h"

//#define SAMPLES 512 // AXI4 Streaming Data FIFO has size 512
//#define M 9 //2^m=samples
//#define CLOCK 100000000.0 //clock speed
//
//int int_buffer[SAMPLES];
//static float q[SAMPLES];
//static float w[SAMPLES];

#define RAW_SAMPLES 2048         // what the grabber gives us
#define AVG_FACTOR 4             // 4-way averaging
#define EFF_SAMPLES (RAW_SAMPLES / AVG_FACTOR)  // 128 effective samples
#define M_EFF 9                  // 2^7 = 128
#define CLOCK 100000000.0        // clock speed
#define TICKS_PER_MS 100000U   // 100 MHz clock -> 100,000 ticks per ms

int int_buffer[RAW_SAMPLES];     // still hold 512 raw ints
static float q[EFF_SAMPLES];     // only 128 effective samples to FFT
static float w[EFF_SAMPLES];


unsigned seqf, seql, seq_old=0;

//void print(char *str);

void read_fsl_values_avg(float* q, int n_eff) {
    int i, j;

    // Start grabber and wait for 512 raw samples
    stream_grabber_start();
    stream_grabber_wait_enough_samples(RAW_SAMPLES);

    // Sequence counters (for your logging / offset calculations)
    seql = stream_grabber_read_seq_counter();
    seqf = stream_grabber_read_seq_counter_latched();

    // Read 512 raw samples into int_buffer
    for (i = 0; i < RAW_SAMPLES; i++) {
        int_buffer[i] = stream_grabber_read_sample(i);
    }

    // 4-way averaging: group every 4 raw samples into 1 effective sample
    // Note: we DO NOT divide by 4, per the lab note â€“ amplitude scaling not needed.
    for (i = 0; i < n_eff; i++) {
        int sum = 0;
        for (j = 0; j < AVG_FACTOR; j++) {
            sum += int_buffer[i * AVG_FACTOR + j];
        }
        q[i] = 3.3f * (float)sum / 67108864.0f;   // scale to voltage-like float
    }

    float mean = 0.0f;
	for (i = 0; i < n_eff; i++) {
		mean += q[i];
	}
	mean /= (float)n_eff;

	for (i = 0; i < n_eff; i++) {
		q[i] -= mean;
	}
}

int main() {
   float sample_f, eff_sample_f;
   int l;
   int ticks_grab;
   int ticks_fft;
   int ticks; //used for timer
   uint32_t Control;
   float frequency;

   Xil_ICacheInvalidate();
   Xil_ICacheEnable();
   Xil_DCacheInvalidate();
   Xil_DCacheEnable();

   //set up timer
   XTmrCtr timer;
   XTmrCtr_Initialize(&timer, XPAR_AXI_TIMER_0_DEVICE_ID);
   Control = XTmrCtr_GetOptions(&timer, 0) | XTC_CAPTURE_MODE_OPTION | XTC_INT_MODE_OPTION;
   XTmrCtr_SetOptions(&timer, 0, Control);


   print("Hello World\n\r");

   XTmrCtr_Start(&timer, 0);

   // Initialize performance monitor (interrupt-based)
   int status = perfmon_init();
   if (status != XST_SUCCESS) {
	   xil_printf("Performance monitor init failed: %d\r\n", status);
   }

   int loop_counter = 0;

   fft_init(EFF_SAMPLES);   // or 512 if you go back to full length

   while(1) {

	   XTmrCtr_Reset(&timer, 0);
	   XTmrCtr_Start(&timer, 0);

      //Read Values from Microblaze buffer, which is continuously populated by AXI4 Streaming Data FIFO.
	   read_fsl_values_avg(q, EFF_SAMPLES);

      ticks_grab = XTmrCtr_GetValue(&timer, 0);
	  XTmrCtr_Stop(&timer, 0);

//	  xil_printf("T_grab = %d ticks (approx %.3f ms)\r\n",
//				 ticks_grab,
//				 (double)ticks_grab / CLOCK * 1000.0);
//
	  xil_printf("Seqf %u, Seql %u, Seq_off %u\r\n",
				 seqf, seql, seqf - seq_old);

	  int ms_grab = ticks_grab / TICKS_PER_MS;

//      ticks=XTmrCtr_GetValue(&timer, 0);
//      printf("Time %d, Seqf %d, Seql %d, Seq_off %d\n", ticks, seqf, seql, seqf-seq_old);
      seq_old = seql;

      sample_f = 100*1000*1000/2048.0;
      //xil_printf("sample frequency: %d \r\n",(int)sample_f);
      eff_sample_f = sample_f / AVG_FACTOR;

      XTmrCtr_Reset(&timer, 0);
      XTmrCtr_Start(&timer, 0);

      //zero w array
      for(l=0;l<EFF_SAMPLES;l++)
         w[l]=0;

      frequency=fft(q,w,EFF_SAMPLES,M_EFF,eff_sample_f);
//      xil_printf("frequency: %d Hz\r\n", (int)(frequency+.5));
//      findNote(frequency);
      ticks_fft = XTmrCtr_GetValue(&timer, 0);
	  XTmrCtr_Stop(&timer, 0);

	  int ms_fft = ticks_fft / TICKS_PER_MS;

//	  xil_printf("T_fft = %d ticks (approx %.3f ms)\r\n",
//				 ticks_fft,
//				 (double)ticks_fft / CLOCK * 1000.0);

//	  xil_printf("frequency: %d Hz\r\n", (int)(frequency + 0.5));

	  xil_printf("Frequency: %4d Hz, ", (int)(frequency + 0.5f));

	 xil_printf("Note: ");
	 findNote(frequency);   // e.g. prints: A4 Diff:-5Hz

	 xil_printf(", T_grab: %3d ms, T_fft: %3d ms\r\n",
				ms_grab, ms_fft);

	  loop_counter++;
	  if (loop_counter % 50 == 0) {   // every 50 loops, print stats
		  perfmon_print_results();
	  }
   }


   return 0;
}
